<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ExpoApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ExpoApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @using Microsoft.AspNet.Identity
                @if (Request.IsAuthenticated)
                {


                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Administrator"))
    {
                <li>@Html.ActionLink("Targi", "Index", "Expoes")</li>
                <li>@Html.ActionLink("Użytkownicy", "Index", "Users")</li>
                <li>@Html.ActionLink("Wystawcy", "Index", "Companies")</li>
                <li>@Html.ActionLink("Organizatorzy", "Index", "Promoters")</li>
}
else if (User.IsInRole("User"))
{
                <li>@Html.ActionLink("Mój profil", "Index", "Profile")</li>
                <li>@Html.ActionLink("Targi", "Index", "Expoes")</li>
                <li>@Html.ActionLink("Moje Targi", "MyExpos", "Profile")</li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
}
else if (User.IsInRole("Wystawca"))
{
                <li>@Html.ActionLink("Mój profil", "Index", "Profile")</li>
                <li>@Html.ActionLink("Targi", "Index", "Expoes")</li>
                <li>@Html.ActionLink("Moje Targi", "MyExpos", "Profile")</li>
                <li>@Html.ActionLink("Moje Pliki", "Index", "Files")</li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                <li>@Html.ActionLink("Zaproszenia i Prośby", "InviteC", "Invites")</li>
}
else if (User.IsInRole("Organizator"))
{
                <li>@Html.ActionLink("Moje Targi", "MyExpos", "Profile")</li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
}
else
{
                <li>@Html.ActionLink("O Aplikacji", "About", "Home")</li>
                <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
}
                </ul>
                    
                   
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("O Aplikacji", "About", "Home")</li>
                        <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ExpoAPP</p>
        </footer>
    </div>

    
</body>
</html>
